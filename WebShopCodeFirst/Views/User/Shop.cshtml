@model Repository.Models.Helper.HelperModels

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<style>
    .card-cart {
        background-color: #dc3545;
        border-top: 1px solid rgba(0, 0, 0, 0.125);
        text-align: center;
    }

        .card-cart:hover {
            background-color: #fff;
            border: 2px solid #dc3545;
        }

        .card-cart button {
            color: #fff;
            text-decoration: none;
            padding: 0.75rem 1.25rem;
            display: block;
            width: 100%;
            background-color: #dc3545;
            border: none;
        }

            .card-cart button:hover {
                background-color: #fff;
                color: #dc3545;
            }

    #cart-style {
        margin-left:10PX;
        font-size: 18px;
    }
</style>

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Shop Name</h1>
            <div class="list-group">
                @foreach (var item in Model.Categories)
                {
                    <a href="#" class="list-group-item">@item.CategoryDescription</a>
                }
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/Content/Img/product-1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/Img/product-2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/Content/Img/product-3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
            </div>

            <div class="row">
                @foreach (var item in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="~/Content/Img/@item.ImageUrl" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    @Html.ActionLink(item.ProductName, "ShowItem", new { ProductId = item.ProductId })
                                </h4>
                                <h5>$@Html.DisplayFor(model => item.Price)</h5>
                                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p>
                            </div>
                            <div class="card-cart">
                                @using (Html.BeginForm("AddToCart", "User", new { ProductId = item.ProductId }, FormMethod.Post))
                                {
                                <button type="submit" class="cart-icon">Add to Cart<i class="fas fa-cart-plus" id="cart-style"></i></button>
                                    @*<a href="../Admin/AddToCart" class="">Add to Cart<i class="fas fa-cart-plus cart-icon"></i></a>*@
                                }

                                </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->